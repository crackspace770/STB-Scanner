<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.media.tv.TvView
        android:id="@+id/tvView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/unavailable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/tvUnavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel_tidak_tersedia"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/led_dot_matrix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtChannelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="8dp"
        android:text="Channel Name"
        android:textSize="26sp"
        android:layout_gravity="top|start"/>

    <TextView
        android:id="@+id/txtChannelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="8dp"
        android:text="No. Channel"
        android:textSize="32sp"
        android:layout_gravity="top|end"/>

</FrameLayout>
